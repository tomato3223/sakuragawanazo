.btn__hint
  display block
  width 60%
  height 60%
  margin 15rem auto 0rem auto
  text-align center
  position relative
  bottom 10rem
  &.active
    width 70%
    height 70%

.btn__answer
  display block
  width 60%
  height 60%
  margin 0 auto
  text-align center
  position relative
  bottom 5rem
  &.active
    width 70%
    height 70%

+ls()
  .btn__hint
    width 20%
    height 20%
    bottom 8rem
    &.active
      width 30%
      height 30%

  .btn__answer
    width 20%
    height 20%
    bottom 5rem
    &.active
      width 30%
      height 30%