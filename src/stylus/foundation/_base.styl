html
  font-size: 62.5%

body
  color: c-txt-1
  display flex
  font-family: 'Roboto', 'Noto Sans JP', sans-serif;
  flex-flow: column
  font-size: 1.4rem
  font-weight: 400
  letter-spacing: 0.05em
  line-height: 3.0rem
  margin: 0
  min-height 100vh

main
  flex: 1

+tb()
  body
    font-size: 1.6rem

+pc()
  body
    font-size: 1.6rem
    letter-spacing: 0.1em

*
  float: none
  position: static

a
  color: inherit
  text-decoration: none
  &:hover
    color c-gray
img
  width: 100%

li
  list-style: none

::selection
  color: c-bg-1
  background-color: c-txt-1
::moz-selection
  color: c-bg-1
  background-color: c-txt-1

::-webkit-scrollbar
  background-color c-navy
::-webkit-scrollbar-thumb
  background-color c-red
