.mask.active
  width 100%
  height 100%
  position fixed
  z-index 8
  background rgba(0,0,0,0.55)
  transition ease .4s

.modal
  width 100%
  height 100%
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%)
  background rgba(0,0,0,0.55)
  display none
  text-align center
  &.active
    display block

.modal-close
  background c-blue-2
  width 4rem
  height 4rem
  display block
  z-index 16
  &__wrap
    position absolute
    right 10%
    top 20%
  & span
    position relative
    width 100%
    height 0.1rem
    background white
    display block
    &:nth-child(1)
      transform rotate(45deg)
    &:nth-child(2)
      transform rotate(-45deg)

.overlay
  position fixed
  width 100%
  height 100%
  display none
  background rgba(0,0,0,0.55)
  opacity .6
  z-index 0
  top 0
  left 0
  right 0
  &.active
    display block

.hint
  width 30rem
  height 30rem
  z-index 16
  position absolute
  transform translate(-50%, 60%)
  
  

.answer
  width 30rem
  height 30rem
  z-index 16
  position absolute
  transform translate(-50%, 60%)

