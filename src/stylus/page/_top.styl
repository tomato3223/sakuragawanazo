.mask.active
  width 100%
  height 100%
  position fixed
  z-index 8
  background rgba(0,0,0,0.55)
  transition ease .4s

.modal
  width 100%
  height 100%
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%)
  background rgba(0,0,0,0.55)
  display none
  &.active
    display block

.modal-close
  background c-blue-2
  padding 0
  margin 0
  width 4rem
  height 4rem
  display block
  z-index 16
  &__wrap
    position absolute
    right 23%
    top 18%
  & span
    position relative
    width 100%
    height 0.2rem
    background white
    display block
    &:nth-child(1)
      transform rotate(45deg)
    &:nth-child(2)
      transform rotate(-45deg)

.overlay
  position fixed
  width 100%
  height 100%
  display none
  background rgba(0,0,0,0.55)
  opacity .6
  z-index 0
  top 0
  left 0
  right 0
  &.active
    display block

.hint
  width 50%
  height 50%
  z-index 16
  text-align center
  position absolute
  transform translate(50%, 50%)
  

.answer
  width 50%
  height 50%
  z-index 16
  text-align center
  position absolute
  transform translate(50%, 50%)


  

@keyframes upDown {
  0% {
    transform: translateY(-8%)
  }
  15% {
    transform: translateY(8%)
  }
  30% {
    transform: translateY(-5%)
  }
  45% {
    transform: translateY(0%)
  }
}

