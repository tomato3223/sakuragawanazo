.mask.active
  width 100%
  height 100%
  position fixed
  z-index 8
  background rgba(0,0,0,0.55)
  transition ease .4s

.practice
  background-image: url(imgPath+"/top/practice_background_sp.png")
  background-size 100%
  &.practice1
    height 100%
    display block

.nazo
  display block
  margin 0 auto
  width 80%
  height auto
  padding-top 5rem

.modal
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background rgba(0,0,0,0.55)
  display none
  &.active
    display block

.modal-close
  background c-blue-2
  width 4rem
  height 4rem
  display block
  z-index 16
  &__wrap
    position absolute
    right 12.5%
    top 25%
    & span
      position absolute
      top 50%
      left 25%
      width 2rem
      height 0.2rem
      background white
      display block
      &:nth-child(1)
        transform rotate(45deg)
      &:nth-child(2)
        transform rotate(-45deg)

.overlay
  position fixed
  width 100%
  height 100%
  display none
  background rgba(0,0,0,0.55)
  opacity .6
  z-index 0
  top 0%
  left 0%
  right 0%
  &.active
    display block

.modal img
  width 75%
  height auto
  z-index 16
  position relative
  top 33%
  right 0
  left 0
  bottom 0
  margin auto
  display block

+ls()
  .modal-close
    &__wrap
      right 35%
      top 10%
  .modal img
    width 30%
    top 20%
  
  .nazo
    width 40%

  .practice
    background-size 50%